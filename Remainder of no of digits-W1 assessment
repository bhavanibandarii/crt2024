#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>
int show(){
    int a;
    scanf("%d",&a);
    int r=log10(a)+1;
    int rem=a%r;
    printf("%d",rem);
    return rem;
}
    int main() {
        show();
    }
    

    

